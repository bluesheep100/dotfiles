    phpstorm_pick

super + shift + f
    alacritty -e "vifm"

super + shift + s
    maim -s -u | xclip -selection clipboard -t image/png -i

super + z
    DOC=$(ls ~/Documents | dmenu -c -i -l 20 -sb "#5b3787")
    zathura "~/Documents/$DOC"

XF86AudioMute
    pulseaudio-ctl mute

XF86AudioRaiseVolume
    pulseaudio-ctl up 5%

XF86AudioLowerVolume
    pulseaudio-ctl down 5%

XF86MonBrightnessUp
    brightnessctl set +5%

XF86MonBrightnessDown
    brightnessctl set 5%-

